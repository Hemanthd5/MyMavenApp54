pipeline {
    agent any

    tools {
        maven 'Maven' // Must be configured in Jenkins Global Tool Configuration
        jdk 'JDK'     // Must be configured as well
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Hemanthd5/MyMavenApp54.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        // Optional: Add your project info as comments
        // DevOps
        // Dept. of CSE, BIT 2024-2025

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Run Application') {
            steps {
                sh 'java -jar target/MyMavenApp54-1.0-SNAPSHOT.jar'
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}

