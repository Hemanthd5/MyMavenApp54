pipeline {
agent any
tools {
maven 'Maven'
jdk 'JDK'
}

stages {
stage('Checkout') {
steps {
git branch: ‘master’, url: 'https://github.com/Hemanthd5/MyMavenApp54.git'
}
}

stage('Build') {
steps {
sh 'mvn clean package'
}
}

DevOps

Dept. of CSE, BIT 2024-2025 5
stage('Test') {
steps {
sh 'mvn test'
}
}

stage('Run Application') {
steps {
// Start the JAR application
sh 'java -jar target/MyMavenApp54-1.0-SNAPSHOT.jar'
}
}
}
post {
success {
echo 'Build and deployment successful!'
}
failure {
echo 'Build failed!'
}
}
}
